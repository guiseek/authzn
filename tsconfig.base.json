      "@authzn/user/api-interfaces": ["libs/user/api-interfaces/src/index.ts"],
      "@authzn/user/data-access": ["libs/user/data-access/src/index.ts"],
      "@authzn/user/domain": ["libs/user/domain/src/index.ts"],
      "@authzn/user/feature-account": [
        "libs/user/feature-account/src/index.ts"
      ],
      "@authzn/user/feature-auth": ["libs/user/feature-auth/src/index.ts"],
